.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 顶部搜索栏 */
.header {
  position: fixed;
  top: 0;
  width: 90%;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
}

.city-select {
  display: flex;
  align-items: center;
}

.city-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.divider {
  width: 1rpx;
  height: 32rpx;
  background-color: #ddd;
  margin: 0 20rpx;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.search-placeholder {
  font-size: 24rpx;
  color: #aaa;
}

.map-btn {
  color: #ff9900;
  font-size: 26rpx;
}

/* 地图区域填满剩余空间 */
.map-container {
  flex: 1;
  min-height: 400rpx;
}

/* 门店列表双栏布局 */
.store-section {
  display: flex;
  height: 420rpx;
  border-top: 1rpx solid #eee;
}

.area-list {
  width: 180rpx;
  background: #f5f5f5;
}

.area-item {
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.area-item.active {
  background: #fff;
  border-left: 6rpx solid #ffa400;
  font-weight: bold;
}

.store-list {
  flex: 1;
  padding: 20rpx;
  background: #fff;
}

.store-card {
  border: 1rpx solid #ffa400;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.store-header {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.store-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.tag {
  padding: 4rpx 10rpx;
  background: #f2f2f2;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-right: 6rpx;
  color: #888;
}

.tag.yellow {
  background: #fff7e0;
  color: #f4b500;
}

.tag.orange {
  background: #ffe7e7;
  color: #ff5000;
}

.store-addr,
.store-time {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #666;
}

.store-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.phone-btn,
.guide-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background: #f6f6f6;
  border-radius: 6rpx;
}
