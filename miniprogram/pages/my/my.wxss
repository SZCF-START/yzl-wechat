/* 押金余额部分整体容器 */
.deposit-section {
  display: flex;
  align-items: center;
  justify-content: space-between; /* 让提现按钮靠右 */
  padding: 0 20px; /* 左右间距 */
  margin-top: 10px;
}

/* 余额信息左对齐头像 */
.deposit-info {
  display: flex;
  align-items: center;
  flex: 1;
}

/* "押金余额：" 文字样式 */
.deposit-text {
  font-size: 16px;
  color: #666;
}

/* 余额金额样式，醒目 */
.deposit-amount {
  font-size: 18px;
  font-weight: bold;
  color: #ff4500;
  margin-left: 5px;
}

/* 提现按钮 */
.withdraw-button {
  background-color: #ff4500;
  color: #ffffff;
  padding: 1px 10px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: bold;
  cursor: pointer;
  border: none;
  margin-left: auto; /* 按钮靠右 */
}
.withdraw-button:active {
  background-color: #e63e00;
}

.quick-access {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 4列布局 */
  gap: 40rpx; /* 上下左右间距一致 */
  padding: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  justify-items: center; /* 水平居中对齐 */
}

.access-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.access-icon {
  width: 70rpx;
  height: 70rpx;
}

.access-text {
  font-size: 26rpx;
  color: #333;
  margin-top: 20rpx; /* 文字与图标间距 */
  text-align: center;
}




/* 菜单部分 */
.menu-section {
  margin-top: 10px;
  background-color: #ffffff;
  border-radius: 12px;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #eeeeee;
}

.menu-icon {
  width: 40px;
  height: 40px;
  margin-right: 15px;
}

.menu-title {
  font-size: 16px;
  color: #333333;
  flex: 1;
}

.menu-arrow {
  width: 16px;
  height: 16px;
}

/* 右上角图标 */
.header-icons {
  position: absolute;
  top: 20px;
  right: 20px;
  display: flex;
  gap: 15px; /* 图标间距 */
}

.icon {
  width: 20px;
  height: 20px;
  cursor: pointer;
}
