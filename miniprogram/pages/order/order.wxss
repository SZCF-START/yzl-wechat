/* 订单容器 */
.order-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* 订单类型切换 */
.order-type {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.order-type view {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
}

.active-type {
  background-color: #f6f6f6;
  color: #ff7200 !important;
  font-weight: 500;
}

/* 订单状态切换 */
.order-status-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 0;
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.status-item {
  position: relative;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.active-status {
  color: #ff7200;
  font-weight: 500;
}

.active-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff7200;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  overflow-y: auto;
  padding: 200rpx 20rpx 120rpx;  /* 上方留出固定导航的空间 */
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  /* position: relative; */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.success-status {
