/* 更多选项弹出层 */
.more-dropdown {
  position: absolute;
  top: 60rpx;
  right: 0;
  left: auto;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.15);
  z-index: 100;
  overflow: visible;
  display: none;
  transform-origin: top right;
}

/* 添加三角形箭头 */
.more-dropdown::before {
  content: '';
  position: absolute;
  top: -16rpx;
  right: 20rpx;
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-bottom: 16rpx solid #fff;
}

/* 如果dropdown弹出到左侧 */
.more-dropdown.left-aligned {
  right: auto;
  left: 0;
  transform-origin: top left;
}

.more-dropdown.left-aligned::before {
  right: auto;
  left: 20rpx;
}

.more-dropdown.show {
  display: block;
  animation: fadeIn 0.2s ease-out;
}

.dropdown-item {
  white-space: nowrap;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background-color: #f9f9f9;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

