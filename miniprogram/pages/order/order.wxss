/* 订单容器 */
.order-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* 订单类型切换 */
.order-type {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.order-type view {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
}

.active-type {
  background-color: #f6f6f6;
  color: #ff7200 !important;
  font-weight: 500;
}

/* 订单状态切换 */
.order-status-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 0;
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.status-item {
  position: relative;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.active-status {
  color: #ff7200;
  font-weight: 500;
}

.active-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff7200;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  overflow-y: auto;
  padding: 200rpx 20rpx 120rpx;  /* 上方留出固定导航的空间 */
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  overflow: visible; /* 允许子元素溢出 */
  position: relative; /* 为了定位弹窗 */
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.success-status {
  color: #FF8C00;
  font-size: 28rpx;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
}

.car-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.car-name {
  font-size: 34rpx;
  font-weight: bold;
}

.car-image {
  width: 180rpx;
  height: 100rpx;
}

.store-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.store-point {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.orange {
  background-color: #FF8C00;
}

.green {
  background-color: #4CD964;
}

.store-name {
  font-size: 26rpx;
  color: #666;
}

.rental-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
  padding: 15rpx 0;
}

.time-info {
  font-size: 24rpx;
  color: #666;
}

.time-info1 {
  font-size: 24rpx;
  color: #eee;
}

.day-count {
  font-size: 28rpx;
  color: #ff7200;
  font-weight: 500;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.more-action {
  font-size: 26rpx;
  color: #999;
  padding: 10rpx 0 20rpx;
  margin-right: auto;
  position: relative;
  z-index: 50;
}

/* 更多选项弹出层 - 修改后的样式 */
.more-dropdown {
  position: absolute;
  top: 60rpx;
  left: 0; /* 改为从左侧开始 */
  min-width: 200rpx;
  max-width: 300rpx; /* 限制最大宽度 */
  background-color: #fff;
  border-radius: 12rpx; /* 增加圆角 */
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12); /* 优化阴影 */
  z-index: 999;
  overflow: hidden; /* 防止内容溢出 */
  display: none;
  transform-origin: top left; /* 改为左上角为原点 */
  white-space: nowrap;
  /* 确保不会超出屏幕右边界 */
  right: auto;
}

/* 当弹窗可能超出右边界时，调整到右对齐 */
.more-dropdown.left-aligned {
  left: auto;
  right: 0;
  transform-origin: top right;
}

/* 添加三角形箭头 */
.more-dropdown::before {
  content: '';
  position: absolute;
  top: -16rpx;
  left: 30rpx; /* 默认箭头在左侧 */
  width: 0;
  height: 0;
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-bottom: 16rpx solid #fff;
  z-index: 1000;
}

/* 右对齐时箭头位置调整 */
.more-dropdown.left-aligned::before {
  left: auto;
  right: 30rpx;
}

.more-dropdown.show {
  display: block;
  animation: fadeIn 0.2s ease-out forwards;
}

.dropdown-item {
  white-space: nowrap;
  padding: 24rpx 30rpx; /* 增加垂直内边距 */
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
  line-height: 1.4; /* 增加行高 */
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active,
.dropdown-item:hover {
  background-color: #f8f8f8;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.action-button {
  font-size: 26rpx;
  color: #666;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  margin-left: 15rpx;
  transition: all 0.2s ease;
}

.action-button:active {
  background-color: #f5f5f5;
}

.highlight {
  color: #FF8C00;
  border-color: #FF8C00;
}

.car-details-btn {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 15rpx;
}

.no-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-order image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.no-order text {
  color: #999;
  font-size: 28rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 搜索按钮 */
.search-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.search-btn text {
  font-size: 26rpx;
  color: #666;
}